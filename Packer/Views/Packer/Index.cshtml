@using PackerTracker.Models

<!DOCTYPE html>
<html>
  <head>
    <title>Packer Tracker</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <h1>Your upcoming trips</h1>
    @if (Model.Count == 0)
    {
      <p>You have no upcoming trips</p>
    }
    <ul>
      @foreach (Packer packer in Model)
      {
          <li><a href="/packer/@packer.Id">@packer.TripName</a></li>
      }
    </ul>
    <form action="/packer/delete" method="post">
      <button type="submit" name="button">Clear all trips</button>
    </form>
  </body>
</html>